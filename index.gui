        <set href="#header/text" attributeName="text-buffer" to="3 Squats!"/>
      </use>
    </use>
    
    <use id="item6" href="#panoramaview-item">
      <rect width="100%" height="100%" fill="black" />
      <use href="#mixed-text-center-mid" y="10%" height="20%" width="96%" fill="fb-yellow">
        <set href="#header/text" attributeName="text-buffer" to="Pochi Leveled up!"/>
      </use>
      
      <use id="myWolfAnimation" href="#wolfFrames" height="60%" width = "60%" x="20%" y="20%"/>
      
      <use  href="#mixed-text-center-mid" y="$" height="10%" width="96%" fill="fb-white">
        <set href="#header/text" attributeName="text-buffer" to="Exp: 0/200    Level: 2"/>
        <set href="#header/text" attributeName="font-size" to="10"/>
      </use>
    </use>

    <!-- Have enough pagination dots for your slides (extras are hidden) -->
    <use id="pagination-dots" href="#pagination-widget" >
      <use href="#pagination-dot" />
      <use href="#pagination-dot" />
      <use href="#pagination-dot" />
      <use href="#pagination-dot" />
      <use href="#pagination-dot" />
      <use href="#pagination-dot" />
      <use href="#pagination-highlight-dot" />
    </use>
  </use>
</svg>
